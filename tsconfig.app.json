{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules",
    "dist",
    "**/*.js"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
    },
    "typeRoots": [
      "./node_modules/@types/",
      "./types"
    ],
  }
}